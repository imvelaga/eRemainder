	<bean id="myDataSource"
        class="org.springframework.jdbc.datasource.DriverManagerDataSource">
        <property name="driverClassName" value="org.postgresql.Driver" />
        <property name="url" value="jdbc:postgresql://localhost:5432/eRemainder" />
        <property name="username" value="postgres" />
        <property name="password" value="postgresql" />
        <!--<property name="socketTimeout" value="10"/>-->

        <property name="connectionProperties">
            <props>
                <prop key="socketTimeout">10</prop>
            </props>
        </property>
   </bean>

	<bean id="mailSender" class="org.springframework.mail.javamail.JavaMailSenderImpl">
		<property name="host" value="smtp.gmail.com" />
		<property name="port" value="587" />
		<property name="username" value="noreplymyhosur@gmail.com" />
		<property name="password" value="WeLove9SA" />
		<property name="javaMailProperties">
			<props>
				<prop key="mail.transport.protocol">smtp</prop>
				<prop key="mail.smtp.auth">true</prop>
				<prop key="mail.smtp.starttls.enable">true</prop>
			</props>
		</property>
	</bean>

	<bean id="dao" class="com.eReminder.dao.eReminderDAOImpl">
		<property name="dataSource" ref="dataSource"></property>
	</bean>

	<bean id="jdbcTemplate" class="org.springframework.jdbc.core.JdbcTemplate">
		<property name="dataSource" ref="dataSource"></property>
	</bean>

	<bean name="service" class="com.eReminder.service.eReminderService">
	</bean>

	<mvc:interceptors>
		<bean class="com.eReminder.Handler.UserControllerHandler" />
	</mvc:interceptors>

	<bean id="report" class="com.eReminder.service.eReminderCron"
		init-method="executeInternal">
		<property name="service" ref="service" />

	</bean>

	<bean id="applicationContextProvder" class="com.eReminder.service.ApplicationContextProvider"></bean>

</beans>

